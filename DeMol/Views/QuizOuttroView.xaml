<UserControl x:Class="DeMol.Views.QuizOuttroView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DeMol.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
                          xmlns:cal="http://www.caliburnproject.org"
        cal:Message.Attach="[Event KeyDown] = [Action OnKeyDown($eventArgs)]">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBlock HorizontalAlignment="Center" Style="{StaticResource H1}" Foreground="Black">Je antwoorden zijn genoteerd.</TextBlock>
            <TextBlock HorizontalAlignment="Center" Style="{StaticResource H1}" Foreground="Black" Margin="20">Roep de volgende speler</TextBlock>
            <Button Name="Next" Style="{StaticResource Btn1}" HorizontalAlignment="Center" Margin="40" MinWidth="80">OK</Button>
        </StackPanel>
    </Grid>
</UserControl>
