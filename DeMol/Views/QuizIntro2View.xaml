<UserControl x:Class="DeMol.Views.QuizIntro2View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DeMol.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
                   xmlns:cal="http://www.caliburnproject.org"
             cal:Message.Attach="[Event KeyDown] = [Action OnKeyDown($eventArgs)]" >

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Margin="40" HorizontalAlignment="Center" Style="{StaticResource H1}" Name="BenJijDeMol"/>
            <TextBox x:Name="Naam" Text="{Binding Path=Naam, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource B1}" MinWidth="200"/>
            <Button Name="Start" HorizontalAlignment="Center" Style="{StaticResource Btn1}" Margin="20">Start</Button>
        </StackPanel>
        <Button VerticalAlignment="Bottom" Name="Menu" HorizontalAlignment="Center" Style="{StaticResource Btn1}" Margin="20">Menu</Button>
    </Grid>
</UserControl>
